{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react",
    "module": "ESNext",  
    "baseUrl": "./",
    "paths": {
      "@src/*":       ["./src/*"],
      "@assets/*":     ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@contexts/*":   ["./src/contexts/*"],
      "@hooks/*":      ["./src/hooks/*"],
      "@layouts/*":    ["./src/layouts/*"],
      "@pages/*":      ["./src/pages/*"],
      "@routes/*":     ["./src/routes/*"],
      "@services/*":   ["./src/services/*"],
    },
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
